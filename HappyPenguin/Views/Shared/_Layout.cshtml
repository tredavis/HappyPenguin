<!DOCTYPE html>
<html ng-app="happyApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-controller="SearchController">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="pull-left"><a href="#/"><img src="http://1.bp.blogspot.com/-gzVi4PpbFII/UCBUkjtG45I/AAAAAAAABSc/kou8-iADMdU/s1600/Baby-Penguin.jpg" height="40px" width="40px" style="margin-top: -7px; border-radius: 10px" /></a></li>
                  
                    

                    @*<li><a href="#/search">Search</a></li>*@
                </ul>
                <form class="navbar-form navbar-left" novalidate align="center">
                    <div class="form-group" style="margin: 0 auto">
                        <input type="text" class="input-sm form-control" ng-model="input" placeholder="Let's find some stuff">
                    </div>
                    <button ng-click="search()" class="btn btn-info btn-sm">Search</button>
                </form>




                <ul class=" nav navbar-nav navbar-right" ng-controller="LoginController" style="margin-top: 5px">
                    <li><a href="#/about">About Us</a></li>
                    <li><a href="#/cart">Cart</a></li>
                    <li ng-hide="isLoggedIn()"><a href="#/login">Login</a></li>
                    <li ng-hide="isLoggedIn()"><a href="#/register">Registration</a></li>
                    <li ng-show="isLoggedIn()" style="color: white; padding-top: 12px;">{{username}}</li>
                    <li ng-show="isLoggedIn()"><a href="" ng-click="logout()">Logout</a></li>

                </ul>


            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    <script src="https://cdn.firebase.com/js/client/2.2.2/firebase.js"></script>
    <script src="https://cdn.firebase.com/libs/angularfire/1.0.0/angularfire.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
